<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue"
    tools:context=".home.ContactUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/normal_spacing">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact_us"/>

        <TextView
            android:id="@+id/contact1LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give us a call"
            android:textColor="@color/navy_blue"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/contact2LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+977 9819176870"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+977 9814146808"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send us a email"
            android:textColor="@color/navy_blue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/EmailMsgLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rabinagurung347@gmail.com"
            android:textColor="@color/navy_blue"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>