<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.PolicesActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_marginTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping and Return Policy"
        android:textColor="@color/navy_blue"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipping_return_policy"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:padding="5dp"
        />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/shipping_return_policy1"
          android:textColor="@color/black"
          android:textSize="13dp"
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:justificationMode="inter_word"
          android:padding="5dp"
          android:layout_marginLeft="10dp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/shipping_return_policy2"
          android:textColor="@color/black"
          android:textSize="13dp"
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:justificationMode="inter_word"
          android:padding="5dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="5dp"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/shipping_return_policy3"
          android:textColor="@color/black"
          android:textSize="13dp"
          android:layout_marginTop="5dp"
          android:layout_gravity="center"
          android:justificationMode="inter_word"
          android:padding="5dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="5dp"
          />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipping_return_policy4"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipping_return_policy5"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipping_return_policy6"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipping_return_policy7"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:padding="5dp"
        />

  </LinearLayout>
</LinearLayout>