<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadPrescription.AddPrescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/upload_rectangle"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/testing2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload more Images"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cameraLL"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/upload_rectangle"
                android:gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Camera"
                    android:textColor="@color/white"
                    android:textStyle="bold" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/galleryLL"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/upload_rectangle"
                android:backgroundTint="@color/pink"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Gallery"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Images"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chosenImageIV"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/removeImageIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/rectange_box"
                android:rotation="45"
                android:src="@drawable/ic_round_add_24"
                app:tint="@color/white" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/doctorNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_shape"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note for Pharmacist"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/noteET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_shape"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/sendPrescriptionLL"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectange_box"
            android:orientation="horizontal"
            android:backgroundTint="@color/blue"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="SEND PRESCRIPTION"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>




    </LinearLayout>



</LinearLayout>