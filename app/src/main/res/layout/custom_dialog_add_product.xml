<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:backgroundTint="@color/off_white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_spacing"
        android:orientation="vertical"
        android:background="@drawable/upload_rectangle"
        android:backgroundTint="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dotted_border"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/image_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/upload"
                    android:tint="@color/grey"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:text="Upload category from your phone or open camera to upload new category" />

            </LinearLayout>

            <ImageView
                android:id="@+id/selected_IV"
                android:scaleType="centerCrop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/camera_LL"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/upload_rectangle"
                android:backgroundTint="@color/light_blue"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/navy_blue"
                    android:src="@drawable/camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Camera"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/navy_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gallery_LL"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:background="@drawable/upload_rectangle"
                android:backgroundTint="@color/light_blue"
                android:gravity="center">

                <ImageView
                    android:tint="@color/navy_blue"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Gallery"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:textColor="@color/navy_blue" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/proNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Product Name *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>

        <EditText
            android:id="@+id/proPriceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Product Price *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>

        <EditText
            android:id="@+id/proDisPriceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Product Discount Price *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>

        <EditText
            android:id="@+id/proDescET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Product Description *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>

        <EditText
            android:id="@+id/proQuantityET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Product Quantity *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>

        <EditText
            android:id="@+id/proProductionDtET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Production Date *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>

        <EditText
            android:id="@+id/proExpireDtET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:height="50dp"
            android:hint="Expire Date *"
            android:textSize="14dp"
            android:padding="@dimen/normal_spacing"
            tools:ignore="SpeakableTextPresentCheck"
            android:drawableTint="@color/black"/>



        <Button
            android:id="@+id/uploadProduct"
            android:layout_width="match_parent"
            android:backgroundTint="@color/light_blue"
            android:layout_height="60dp"
            android:text="UPLOAD PRODUCT"
            android:textColor="@color/navy_blue" />



    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>



