<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addressLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/off_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_spacing"
        android:background="@drawable/rectange_box"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/normal_spacing"
        android:layout_margin="@dimen/normal_spacing">


    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/rectange_box"
        android:backgroundTint="@color/primaryColor"
        android:padding="@dimen/small_spacing"
        android:src="@drawable/ic_baseline_location_on_24"
        app:tint="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cityStreetTV"
                    android:paddingStart="@dimen/normal_spacing"
                    android:paddingTop="@dimen/small_spacing"
                    android:text="Pokhara, Masbar"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/removeAddressIV"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/rectange_box"
                    android:rotation="45"
                    android:src="@drawable/ic_round_add_24"
                    app:tint="@color/white" />


            </LinearLayout>




            <TextView
                android:id="@+id/provinceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/normal_spacing"
                android:text="Gandaki Province"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/decTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/normal_spacing"
                android:text="Gandaki Province"
                android:textSize="14sp"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>


